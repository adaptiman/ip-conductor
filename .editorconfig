# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{py,md,txt,yml,yaml,json,sh}]
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Markdown files - don't trim trailing whitespace as it can be significant
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space  
indent_size = 2
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true